<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:background="@drawable/background"
        android:contentDescription="@string/desc" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" >
    
	    <TextView
	        android:id="@+id/label_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        style="@style/TitleFont" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp" >
	    
	        <ImageView
	            android:id="@+id/ic_origin"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            android:src="@drawable/ic_origin"
	            android:contentDescription="@string/desc" />
	        
	        <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
	        
		        <TextView
			        android:id="@+id/label_origin"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/where_are_you"
			        style="@style/LabelFont" />
		        
		        <AutoCompleteTextView
			        android:id="@+id/textview_origin"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/label_origin"
			        style="@style/StationTextView"/>
	        
	        </RelativeLayout>
	    </LinearLayout>
	        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:orientation="horizontal"
	        android:gravity="center_vertical" >
	    
	        <ImageView
	            android:id="@+id/ic_destination"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            android:src="@drawable/ic_destination"
	            android:contentDescription="@string/desc" />
	        
	        <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >
	        
		        <TextView
			        android:id="@+id/label_destination"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/where_to_go"
			        style="@style/LabelFont" />
		        
		        <AutoCompleteTextView
			        android:id="@+id/textview_destination"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/label_destination"
			        style="@style/StationTextView"/>
		        
		        <CheckBox
		            android:id="@+id/get_notification"
		            android:button="@drawable/notification_checkbox"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_above="@+id/textview_destination"
		            android:layout_alignParentRight="true"
		            android:layout_marginBottom="4dp" />
	        
	        </RelativeLayout>
	    </LinearLayout>
	
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="50dp"
	        android:gravity="center" >
	    
		    <Button
		        android:id="@+id/ok_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/ic_ok" />
	    
		    <ProgressBar
		        android:id="@+id/loading_layout"
		        style="?android:attr/progressBarStyleLarge"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone" />
		    
		    <LinearLayout
		        android:id="@+id/last_train_layout"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical"
		        android:visibility="gone" >
		        
		        <TextView
			        android:id="@+id/label_station"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/ResultFont" />
		        
		        <TextView
			        android:id="@+id/label_line"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/ResultFont" />
		        
		        <TextView
			        android:id="@+id/label_departure_time"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        style="@style/ResultFont" />
		
		        <TextView
		            android:id="@+id/label_timer"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            style="@style/ResultFont" />
	        
	    	</LinearLayout>
	    	
		    <LinearLayout
		        android:id="@+id/missed_train_layout"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical"
		        android:gravity="center_horizontal"
		        android:visibility="gone" >
		        
		        <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:src="@drawable/ic_missed_train"
			        android:contentDescription="@string/desc" />
		        
		        <TextView
			        android:id="@+id/label_missed_train"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/missed_train"
			        android:gravity="center"
			        style="@style/ResultFont" />
	        
	    	</LinearLayout>
	    </RelativeLayout>
	</LinearLayout>
</RelativeLayout>