<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TitleFont">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:shadowColor">#000000</item>
    	<item name="android:shadowRadius">10</item>
    	<item name="android:shadowDx">-2</item>
    	<item name="android:shadowDy">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">40dp</item>
    </style>
    
    <style name="LabelFont" parent="@style/ResultFont">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    
    <style name="TimerFont" parent="@style/ResultFont">
        <item name="android:textSize">50sp</item>
    </style>
    
    <style name="ResultFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:shadowColor">#000000</item>
    	<item name="android:shadowRadius">10</item>
    	<item name="android:shadowDx">-2</item>
    	<item name="android:shadowDy">2</item>
    </style>
    
    <style name="StationTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:completionThreshold">2</item>
		<item name="android:singleLine">true</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:layout_marginLeft">30dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:background">@drawable/bg_textview</item>
    </style>

</resources>
