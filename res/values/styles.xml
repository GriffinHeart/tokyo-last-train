<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="TitleLabel">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:shadowColor">#000000</item>
    	<item name="android:shadowRadius">10</item>
    	<item name="android:shadowDx">-2</item>
    	<item name="android:shadowDy">2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">40dp</item>
    </style>
    
    <style name="StationLabel" parent="@style/RegularLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    
    <style name="TimerLabel" parent="@style/RegularLabel">
        <item name="android:textSize">60sp</item>
    </style>
    
    <style name="RegularLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:shadowColor">#000000</item>
    	<item name="android:shadowRadius">10</item>
    	<item name="android:shadowDx">-2</item>
    	<item name="android:shadowDy">2</item>
    </style>
    
    <style name="StationTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:completionThreshold">2</item>
		<item name="android:singleLine">true</item>
		<item name="android:selectAllOnFocus">true</item>
		<item name="android:layout_marginLeft">30dp</item>
		<item name="android:paddingLeft">4dp</item>
		<item name="android:paddingRight">4dp</item>
		<item name="android:background">@drawable/bg_textview</item>
    </style>

</resources>
